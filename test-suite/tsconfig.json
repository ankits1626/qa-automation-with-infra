{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2019"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node", "mocha", "@wdio/globals/types"]
  },
  "include": [
    "src/**/*.ts",
    "wdio/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}